<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="@string/pref_title_module"
		>
		<Preference
			android:title="@string/pref_title_module_scope"
			android:summary="@string/pref_summery_module_scope"
			/>
		<Preference
			android:title="@string/pref_title_side_effect"
			android:summary="@string/pref_summery_side_effect"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/pref_title_call_recording"
		>
		<SwitchPreference
			android:title="@string/pref_title_is_enable"
			android:summary="@string/pref_summery_is_enable"
			android:key="@string/pref_record_enabled"
			android:defaultValue="true"
			/>
		<SwitchPreference
			android:title="@string/pref_title_force_audio_source"
			android:summary="@string/pref_summery_force_audio_source"
			android:key="force_audio_source"
			android:dependency="@string/pref_record_enabled"
			android:defaultValue="false"
			/>
		<SwitchPreference
			android:title="@string/pref_title_aac_format"
			android:summary="@string/pref_summery_aac_format"
			android:key="aac_format"
			android:dependency="@string/pref_record_enabled"
			android:defaultValue="false"
			/>
		<SwitchPreference
			android:title="@string/pref_title_record_incoming"
			android:summary="@string/pref_summery_record_incoming"
			android:key="record_incoming"
			android:dependency="@string/pref_record_enabled"
			android:defaultValue="true"
			/>
		<SwitchPreference
			android:title="@string/pref_title_record_outgoing"
			android:summary="@string/pref_summery_record_outgoing"
			android:key="record_outgoing"
			android:dependency="@string/pref_record_enabled"
			android:defaultValue="true"
			/>
		<EditTextPreference
			android:title="@string/pref_title_record_delay"
			android:summary="@string/pref_summery_record_delay"
			android:key="record_delay2"
			android:dependency="@string/pref_record_enabled"
			android:numeric="integer"
			android:maxLength="4"
			android:defaultValue="500"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/pref_title_recording_file"
		>
		<Preference
			android:title="@string/pref_title_recording_folder"
			android:key="recording_folder"
			/>
		<SwitchPreference
			android:title="@string/pref_title_prepend_contact_name"
			android:summary="@string/pref_summery_prepend_contact_name"
			android:key="prepend_contact_name"
			android:dependency="@string/pref_record_enabled"
			android:defaultValue="false"
			/>
		<SwitchPreference
			android:title="@string/pref_title_separate_folder"
			android:summary="@string/pref_summery_separate_folder"
			android:key="separate_folder"
			android:dependency="@string/pref_record_enabled"
			android:defaultValue="false"
			/>
		<SwitchPreference
			android:title="@string/pref_title_skip_media_scan"
			android:summary="@string/pref_summery_skip_media_scan"
			android:key="skip_media_scan"
			android:dependency="@string/pref_record_enabled"
			android:defaultValue="false"
			/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="@string/pref_title_about"
		>
		<Preference
			android:title="@string/app_name"
			android:key="version_name"
			/>
		<Preference
			android:title="@string/pref_title_url"
			android:summary="@string/text_url"
			>
			<intent
				android:action="android.intent.action.VIEW"
				android:data="@string/text_url"
				/>
		</Preference>
		<Preference
			android:title="@string/pref_title_author"
			android:summary="@string/text_author"
			/>
		<Preference
			android:title="@string/pref_title_email"
			android:summary="@string/text_email"
			>
			<intent
				android:action="android.intent.action.VIEW"
				android:data="@string/text_mailto"
				/>
		</Preference>
	</PreferenceCategory>
</PreferenceScreen>
